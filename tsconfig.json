{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "rootDir": "./src",
        "outDir": "./build/src",
        "declaration": true,
        "declarationDir": "./build/declarations",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "charset": "utf-8",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "emitBOM": false,
        "sourceMap": false
    },

    "include": [
        "./src/**/*"
    ]
}
